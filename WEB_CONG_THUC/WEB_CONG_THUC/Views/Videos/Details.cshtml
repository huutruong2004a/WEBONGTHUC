@model Video
@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <div class="video-details">
        <div class="row">
            <div class="col-md-8">
                <!-- Phần video chính -->
                <div class="video-player-container mb-4">
                    @{
                        string videoId = "";
                        if (Model.VideoUrl.Contains("youtube.com/watch?v="))
                        {
                            videoId = Model.VideoUrl.Split("v=")[1].Split('&')[0];
                        }
                        else if (Model.VideoUrl.Contains("youtu.be/"))
                        {
                            videoId = Model.VideoUrl.Split('/').Last().Split('?')[0];
                        }
                    }
                    @if (!string.IsNullOrEmpty(videoId))
                    {
                        <div class="ratio ratio-16x9">
                            <iframe src="https://www.youtube.com/embed/@videoId"
                                    title="@Model.Title"
                                    frameborder="0"
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen>
                            </iframe>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            Video không khả dụng. <a href="@Model.VideoUrl" target="_blank">Xem tại đây</a>
                        </div>
                    }
                </div>

                <!-- Thông tin video -->
                <div class="video-info">
                    <h1>@Model.Title</h1>
                    <div class="video-meta">
                        <span><i class="fas fa-eye"></i> @Model.ViewCount lượt xem</span>
                        <span><i class="fas fa-calendar"></i> @Model.CreatedAt.ToString("dd/MM/yyyy")</span>
                        @if (Model.User != null)
                        {
                            <span><i class="fas fa-user"></i> @Model.User.UserName</span>
                        }
                    </div>

                    @if (User.Identity!.IsAuthenticated)
                    {
                        <button class="btn-favorite @(ViewBag.IsFavorited ? "active" : "")"
                                data-video-id="@Model.Id">
                            <i class="fas fa-heart"></i> Yêu thích
                        </button>
                    }

                    <div class="video-description mt-4">
                        <h4>Mô tả</h4>
                        <p>@Model.Description</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <!-- Thông tin công thức liên quan -->
                @if (Model.Recipe != null)
                {
                    <div class="related-recipe">
                        <h4>Công thức liên quan</h4>
                        <div class="card">
                            @if (!string.IsNullOrEmpty(Model.Recipe.ImageUrl))
                            {
                                <img src="@Model.Recipe.ImageUrl" class="card-img-top" alt="@Model.Recipe.Title">
                            }
                            <div class="card-body">
                                <h5 class="card-title">@Model.Recipe.Title</h5>
                                <p class="card-text">@Model.Recipe.Description</p>
                                <a asp-controller="Recipes"
                                   asp-action="Details"
                                   asp-route-id="@Model.Recipe.Id"
                                   class="btn btn-primary">
                                    Xem công thức
                                </a>
                            </div>
                        </div>
                    </div>
                }

                <!-- Video liên quan -->
                @if (ViewBag.RelatedVideos != null)
                {
                    <div class="related-videos mt-4">
                        <h4>Video liên quan</h4>
                        @foreach (var relatedVideo in ViewBag.RelatedVideos)
                        {
                            <div class="related-video-item">
                                <a asp-action="Details" asp-route-id="@relatedVideo.Id">
                                    <div class="thumbnail">
                                        <img src="@relatedVideo.ThumbnailUrl" alt="@relatedVideo.Title">
                                    </div>
                                    <div class="info">
                                        <h6>@relatedVideo.Title</h6>
                                        <span>@relatedVideo.ViewCount lượt xem</span>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .video-details {
            padding: 20px 0;
        }

        .video-meta {
            color: #666;
            margin: 10px 0;
        }

            .video-meta span {
                margin-right: 20px;
            }

            .video-meta i {
                margin-right: 5px;
            }

        .btn-favorite {
            background: none;
            border: 1px solid #dc3545;
            color: #dc3545;
            padding: 5px 15px;
            border-radius: 20px;
            transition: all 0.3s ease;
        }

            .btn-favorite.active {
                background: #dc3545;
                color: white;
            }

        .related-video-item {
            margin-bottom: 15px;
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

            .related-video-item:hover {
                transform: translateY(-3px);
            }

            .related-video-item .thumbnail img {
                width: 100%;
                height: 120px;
                object-fit: cover;
            }

            .related-video-item .info {
                padding: 10px;
                background: #f8f9fa;
            }

                .related-video-item .info h6 {
                    margin: 0;
                    font-size: 0.9rem;
                    color: #333;
                }

                .related-video-item .info span {
                    font-size: 0.8rem;
                    color: #666;
                }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const favoriteBtn = document.querySelector('.btn-favorite');
            if (favoriteBtn) {
                favoriteBtn.addEventListener('click', async function() {
                    const videoId = this.dataset.videoId;
                    try {
                        const response = await fetch(`/Videos/ToggleFavorite/${videoId}`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        });

                        if (response.ok) {
                            this.classList.toggle('active');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                    }
                });
            }
        });
    </script>
}