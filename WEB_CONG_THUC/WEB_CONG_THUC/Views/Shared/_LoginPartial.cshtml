@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="user-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="user-dropdown">
            <button class="user-dropdown-btn">
                <img src="/images/user-avatar.jpg" alt="User Avatar" class="user-avatar" />
                <span>@User.Identity?.Name</span>
                <i class="fas fa-chevron-down"></i>
            </button>
            <div class="user-dropdown-content">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                    <i class="fas fa-user-cog"></i> Tài khoản
                </a>
                <a asp-controller="Recipes" asp-action="MyRecipes">
                    <i class="fas fa-book-open"></i> Công thức của tôi
                </a>
                <a href="/recipes/favorites">
                    <i class="fas fa-heart"></i> Yêu thích
                </a>
                <a href="/Blog/Create">
                    <i class="fas fa-pen"></i> Đăng Blog
                </a>
                <a href="/Blog/Manage">
                    <i class="fas fa-hourglass-half"></i> Chờ duyệt
                </a>
                <div class="dropdown-divider"></div>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="dropdown-logout">
                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                    </button>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="auth-buttons">
            <a class="btn btn-outline" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
        </div>
    }
</div>