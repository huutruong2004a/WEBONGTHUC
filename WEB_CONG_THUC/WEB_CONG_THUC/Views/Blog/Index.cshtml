@model IEnumerable<WEB_CONG_THUC.Models.Blog>

<h2>Danh sách bài viết</h2>

@foreach (var blog in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <h3>@blog.Title</h3>
            <p>@blog.Content.Substring(0, Math.Min(blog.Content.Length, 100))...</p>
            <a href="@Url.Action("Details", "Blog", new { slug = blog.Slug })" class="btn btn-primary">Xem chi tiết</a>
        </div>
    </div>
}
