@model IEnumerable<WEB_CONG_THUC.Models.Blog>

@{
    ViewData["Title"] = "Quản lý bài đăng";
}

<h1>Quản lý bài đăng</h1>

<div class="mb-3">
    <form asp-action="Manage" method="get">
        <label for="status">Lọc theo trạng thái:</label>
        <select name="status" id="status" onchange="this.form.submit()">
            <option value="All" selected="@(ViewBag.FilterStatus == "All")">Tất cả</option>
            <option value="Pending" selected="@(ViewBag.FilterStatus == "Pending")">Chờ duyệt</option>
            <option value="Approved" selected="@(ViewBag.FilterStatus == "Approved")">Đã duyệt</option>
            <option value="Rejected" selected="@(ViewBag.FilterStatus == "Rejected")">Không duyệt</option>
        </select>
    </form>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Ngày tạo</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>
                    @if (blog.Status == WEB_CONG_THUC.Models.BlogStatus.Pending)
                    {
                        <a asp-action="Preview" asp-route-id="@blog.Id">@blog.Title</a>
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-slug="@blog.Slug">@blog.Title</a>
                    }
                </td>
                <td>@blog.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@blog.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-primary btn-sm">Chỉnh sửa</a>
                    <form asp-action="Delete" asp-route-id="@blog.Id" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@blog.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                    </form>
                    @if (blog.Status == WEB_CONG_THUC.Models.BlogStatus.Pending)
                    {
                        <form asp-action="Approve" asp-route-id="@blog.Id" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@blog.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Duyệt</button>
                        </form>
                        <form asp-action="Reject" asp-route-id="@blog.Id" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@blog.Id" />
                            <button type="submit" class="btn btn-warning btn-sm">Từ chối</button>
                        </form>
                        <!-- Trong vòng lặp hiển thị danh sách bài viết -->
                        <a asp-action="Preview" asp-route-id="@blog.Id" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Xem trước
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        // Xác nhận trước khi duyệt/từ chối/xóa
        document.querySelectorAll('form[action*="Approve"]').forEach(form => {
            form.addEventListener('submit', (e) => {
                if (!confirm('Bạn có chắc muốn duyệt bài đăng này?')) {
                    e.preventDefault();
                }
            });
        });
        document.querySelectorAll('form[action*="Reject"]').forEach(form => {
            form.addEventListener('submit', (e) => {
                if (!confirm('Bạn có chắc muốn từ chối bài đăng này?')) {
                    e.preventDefault();
                }
            });
        });
        document.querySelectorAll('form[action*="Delete"]').forEach(form => {
            form.addEventListener('submit', (e) => {
                if (!confirm('Bạn có chắc muốn xóa bài đăng này?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
